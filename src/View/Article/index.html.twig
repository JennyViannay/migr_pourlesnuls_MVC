{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Articles</h1>
    <ul>
        {% for item in articles %}
            <a href="/article/show/{{ item.id }}">{{ item.id }}. {{ item.title }}</a>
            <h2>{{item.author}}</h2>
            <p>{{item.content}}</p>
            <img src="{{item.img}}" alt="">
            
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/article/add">Ajouter</a>
{% endblock %}
