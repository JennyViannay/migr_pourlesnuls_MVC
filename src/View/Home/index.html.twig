{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Hello {{user.name}} !</h1>
    {% if user.is_connected == true %}
        <h1>Articles</h1>
        <ul>
            {% for item in articles %}
                <a href="/article/show/{{ item.id }}">{{ item.id }}. {{ item.title }}</a>
                <h2>{{item.author}}</h2>
                <p>{{item.content}}</p>
                <img src="{{item.img}}" alt="">
            {% else %}
                <li>Nothing to display</li>
            {% endfor %}
        </ul>
        <a href="/article/add">Ajouter</a>
    {% else %}
        {% if error.form %}
            {{error.form}}
        {% elseif error.name %}
            {{error.name}}
        {% elseif error.password %}
            {{error.password}}
        {% endif %}
        <form method="POST">
            <input type="text" name="name">
            <input type="password" name="password">
            <button type="submit">Submit</button> 
        </form>
    {% endif %}
{% endblock %}
